@page "/account/deletepersonaldata"
@model Animulu.Areas.Identity.Pages.Account.DeletePersonalDataModel
@{
    ViewData["Title"] = "Account personal data";
    ViewData["SubTitle"] = "Account";
    ViewData["Identity"] = "true";
}
<div class="row my-5">
    <div class="row offset-xl-3 col-xl-6 offset-md-1 col-md-10 col-12 bg-grey border-radius-light py-4 mx-md-auto mx-0">
        <partial name="_LayoutAccountPartial" />
        <div class="col-md-8 col-12 bg-grey">
            <h5 class="mt-3">Delete personal data</h5>
            <form id="delete-user" method="post" class="col-sm-7 col-12 px-0 mt-3 font-content">
                <span class=" text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group my-3">
                    <input asp-for="Input.Password" placeholder="Password" class="form-control bg-grey-dark border-grey-dark form-dark-fix" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>