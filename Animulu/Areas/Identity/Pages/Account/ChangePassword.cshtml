@page "/account/password"
@model Animulu.Areas.Identity.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Account password";
    ViewData["SubTitle"] = "Account";
    ViewData["Identity"] = "true";
}
<div class="row my-5">
    <div class="offset-xl-3 col-xl-6 offset-md-1 col-md-10 col-12 bg-grey-light border-radius-light py-4 mb-2 @if (Model.StatusMessage == "" || Model.StatusMessage == null) {<text>d-none</text>}">
        @Model.StatusMessage
    </div>
    <div class="row offset-xl-3 col-xl-6 offset-md-1 col-md-10 col-12 bg-grey border-radius-light py-4 mx-md-auto mx-0">
        <partial name="_LayoutAccountPartial" />
        <div class="col-md-8 col-12 bg-grey">
            <h5 class="mt-3">Password</h5>
            <form id="password-form" method="post" class="col-sm-7 col-12 px-0 mt-3 font-content">
                <span>Change passowrd</span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3 mt-2">
                    <input asp-for="Input.Password" placeholder="Old Password" class="form-control bg-grey-dark border-grey-dark form-dark-fix" />
                </div>
                <div class="form-group mb-3 mt-2">
                    <input asp-for="Input.NewPassword" placeholder="New Password" class="form-control bg-grey-dark border-grey-dark form-dark-fix" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input asp-for="Input.NewPasswordConfirmed" placeholder="New Password Confirmed" class="form-control bg-grey-dark border-grey-dark form-dark-fix" />
                    <span asp-validation-for="Input.NewPasswordConfirmed" class="text-danger"></span>
                </div>
                <button id="change-password-button" type="submit" class="btn btn-form">Change</button>
            </form>
        </div>
    </div>
</div>